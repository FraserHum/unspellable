{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "root": true,
  "extends": ["airbnb", "airbnb-typescript", "next/core-web-vitals"],
  "ignorePatterns": [
    ".eslintrc.js",
    ".next/*",
    "node_modules/",
    "next.config.js"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ],
  "rules": {
    "no-confusing-arrow": "off",
    "implicit-arrow-linebreak": "off"
  }
}
